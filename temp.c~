#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <fcntl.h>
#include <errno.h>
#include <sys/types.h>
#include <unistd.h>


int main(int argc, char ** argv){
	char buffer[200];
	int in_fd=open ("/dev/chardev1", O_RDONLY);
	if(in_fd==-1)
	{
		perror("Input file error!");	
		return 1;
	}
	while(1){
		int i=0;
		i++;
	}
	int ret_in=read (in_fd, &buffer, 5);
	if(ret_in==-1)
	{
		perror("error!");	
		return 1;
	}
	printf("%d\n",ret_in);
	printf("%s\n",buffer);
	//write(1,&buffer,ret_in);
	return 0;

}
